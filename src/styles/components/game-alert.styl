@import '../vars'
@import '../mixins'

.GameAlert
  pointer-events none
  size 100%
  position absolute
  top 0

.GameAlert-wrapper
  opacity 0
  position absolute
  margin auto
  left 50%
  top 80%
  transform translate(-50%, -50%)
  min-width 380px
  max-width 320px
  width 40%
  background $SHARK
  border 2px solid $STEEL_BLUE
  border-radius 50px
  padding 10px 30px 18px 30px

.GameAlert-icon
  fill $WHITE
  size 38px
  margin-right 7px
  transform translateY(-2px)

.GameAlert-title
  letter-spacing rem(2px)
  font-size rem(24px)
  color $WHITE
  margin 0

.GameAlert-text
  color $WHITE
  opacity 0.7
  margin 0